{
    "name": "DocSend Slide Deck Downloader",
    "version": "1.7",
    "description": "Download any DocSend slide deck as a PDF",
    "permissions": ["declarativeContent", "activeTab", "webRequest", "webRequestBlocking", "*://*.docsend.com/", "*://*.cloudfront.net/"],
    "background": {
        "scripts": ["background.js"]
    },
    "page_action": {
        "default_title": "Download a DocSend slide deck as a PDF"
    },
    "icons": {
        "16": "./assets/icon16.png",
        "48": "./assets/icon48.png",
        "128": "./assets/icon128.png"
    },
    "manifest_version": 3
}
